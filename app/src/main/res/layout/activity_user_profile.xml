<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:clickable="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:id="@+id/toppne"

                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"

                    app:srcCompat="@drawable/laila" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_picture"
                    android:layout_centerHorizontal="true"

                    android:text="লাইলা"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_name"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="লেভেল ২"
                    android:textColor="#8190a7"
                    android:textSize="14sp"
                    android:textStyle="normal" />
                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/level"
                        android:layout_centerHorizontal="true"

                        android:fontFamily="sans-serif"

                        android:text="২৩১০ পয়েন্ট"
                        android:textColor="#8190a7"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="65dp"
                android:id="@+id/topview"
                android:layout_marginRight="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/toppne"
                android:background="@color/border_color" />


            <android.support.v7.widget.CardView
                android:id="@+id/leaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_below="@+id/topview"

                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/lable_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14dp"
                        android:drawableLeft="@drawable/trophy"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"

                        android:fontFamily="sans-serif"
                        android:text="লিডারবোর্ড "
                        android:textColor="@color/text_black"
                        android:textSize="17sp"
                        android:textStyle="normal" />



                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/notification_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaderboard"
                android:clickable="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity=""
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/lable_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="sans-serif"
                        android:drawableLeft="@drawable/bell"
                        android:drawablePadding="10dp"
                        android:text="নোটিফিকেশন সেটিংস"
                        android:textColor="@color/text_black"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/to_notification_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="38dp"
                        android:layout_marginRight="38dp"
                        android:layout_marginTop="14dp"
                         />
                </RelativeLayout>

            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:id="@+id/privacy_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notification_card"
                android:clickable="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/lable_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="14dp"
                        android:drawableLeft="@drawable/shield"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif"
                        android:text="প্রাইভেসি সেটিংস"
                        android:textColor="@color/text_black"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/to_privacy_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="38dp"
                        android:layout_marginRight="38dp"
                        android:layout_marginTop="14dp"
                         />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/help_about_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/privacy_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/lable_help_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/version"
                        android:drawablePadding="10dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="sans-serif"
                        android:text="ভার্শন"
                        android:textColor="@color/text_black"
                        android:textSize="17sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:textColor="@color/text_black"
                        android:textSize="17sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif"
                        android:layout_marginEnd="38dp"
                        android:text="1.01"
                        android:layout_marginRight="38dp"
                        android:layout_marginTop="15dp"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/signout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/help_about_card"

                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/signout_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/door"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif"
                        android:text="সাইন আউট"
                        android:textColor="#f65314"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>







</RelativeLayout>