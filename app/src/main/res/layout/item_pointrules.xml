<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="5dp"

    android:layout_marginStart="5dp"


    android:background="@drawable/background"
    xmlns:emojicon="http://schemas.android.com/tools"

    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/toptextpoint"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:text="পয়েন্ট রুলস"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@id/toptextpoint"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/holder"

        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:id="@+id/one"
            android:layout_height="wrap_content">
       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/level_11"
           android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="লেভেল ১"

            android:layout_gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="০-৪৯ পয়েন্ট"

            android:layout_gravity="center"
            android:textSize="20sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/view1"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/one"
            android:background="@color/border_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/two"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/level_22"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="লেভেল ২"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৫০-১১৯ পয়েন্ট"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"

            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/two"
            android:background="@color/border_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:id="@+id/three"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/level_33"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="লেভেল ৩"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="১২০-৩৯৯ পয়েন্ট"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"

            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/two"
            android:background="@color/border_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:id="@+id/four"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/level_44"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="লেভেল ৪"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৪০০-১৪৯৯ পয়েন্ট"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"

            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/two"
            android:background="@color/border_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:id="@+id/five"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:background="@drawable/level_55"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="লেভেল ৫"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="১৫০০ পয়েন্ট এর বেশি "
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/closethis"
            android:layout_marginTop="50dp"
            android:textSize="16sp"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:textColor="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/profile_button_shape"
            android:text="বন্ধ করুন"/>
    </LinearLayout>

</ScrollView>

</RelativeLayout>
