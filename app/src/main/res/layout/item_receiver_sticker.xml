<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_holder_receiver"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:weightSum="10">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="250dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp">

                <ImageView
                    android:id="@+id/stickerimage_recevier"
                    android:layout_width="128dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="128dp"
                    android:layout_alignParentLeft="true"

                    android:layout_alignParentStart="true"
                    />


                <TextView
                    android:id="@+id/receiversstkName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stickerimage_recevier"
                    android:layout_alignLeft="@id/stickerimage_recevier"
                    android:layout_marginLeft="5dp"
                    android:text="11:57 pm"
                    android:textColor="@color/time_stamp"
                    android:textSize="5pt" />
            </RelativeLayout>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>