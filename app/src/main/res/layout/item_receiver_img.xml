<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_holder_receiver"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:gravity="left"


                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/receiversphoto"


                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="40dp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/receiversphotoholder"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/receiversphoto"
                    android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/receivers_image_view"
                    android:layout_width="220dp"
                    android:layout_height="190dp"


                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"

                    />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:foreground="@drawable/ic_get_app_white_24dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/downloadimage"
                        />
                    <ProgressBar
                        android:layout_width="100dp"
                        android:id="@+id/downloadprogress"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/receiversName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/receivers_image_view"
                        android:layout_alignLeft="@+id/receivers_image_view"
                        android:gravity="left"

                        android:text="11:57pm"
                        android:textSize="5pt"
                        android:textColor="@color/time_stamp" />
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>